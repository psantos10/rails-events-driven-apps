<ul class="nav nav-tabs" id="payment-requests" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pending-requests-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="home" aria-selected="true">
      Pending requests
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="accepted-requests-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="profile" aria-selected="false">
      Accepted requests
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="rejected-requests-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab" aria-controls="contact" aria-selected="false">
      Rejected requests
    </button>
  </li>
</ul>
<div class="tab-content" id="payment-requests-content">
  <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-requests-tab">
    <%= render 'pending_payment_requests', payment_requests: @pending_payment_requests %>
  </div>
  <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-requests-tab">
    <%= render 'accepted_payment_requests', payment_requests: @accepted_payment_requests %>
  </div>
  <div class="tab-pane fade" id="rejected" role="tabpanel" aria-labelledby="rejected-requests-tab">
    <%= render 'rejected_payment_requests', payment_requests: @rejected_payment_requests %>
  </div>
</div>


